<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#edeff2"
    android:orientation="vertical"
    android:paddingTop="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:elevation="1dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_main_carousel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:clipChildren="false"
            android:clipToPadding="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_weight="2"
        android:background="#ffffff"
        android:elevation="1dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_main_sub_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.3"
            android:fontFamily="@font/jalnan_font"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:text="Model Student 사용 TIP!"
            android:textColor="@color/Theme_Indigo"
            android:textSize="21dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.7">

            <View
                android:id="@+id/v_main_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:background="@color/Theme_Indigo" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"/>

            <ImageView
                android:id="@+id/iv_main_silhouette"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:src="@drawable/tmp_jjin_ddugbaegi"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
