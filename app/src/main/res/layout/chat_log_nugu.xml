<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="6"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/chat_log_nugu_profile"
            android:scaleType="centerCrop"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="15dp"
            android:paddingTop="10dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/chat_log_nugu_text_back_base"
                android:scaleType="fitXY"
                android:layout_marginBottom="2dp"/>
            <ImageView
                android:id="@+id/iv_cl_nugu_text_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/chat_log_nugu_text_back"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/tv_cl_nugu_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="어서와 반가워 동민아 오랜"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:maxLines="2"
                android:fontFamily="@font/inter_bold"/>
        </FrameLayout>
        <TextView
            android:id="@+id/tv_cl_nugu_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PM 2:10"
            android:fontFamily="@font/inter_extra_light"
            android:textColor="#000000"
            android:textSize="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

</LinearLayout>