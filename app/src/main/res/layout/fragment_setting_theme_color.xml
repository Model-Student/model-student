<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main_layout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#edeff2">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--안내문-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_setting_theme_color_title"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="어떤 색상을 좋아하세요?"
                        android:fontFamily="@font/inter_bold"
                        android:textSize="24dp"
                        android:textColor="#383838"
                        android:gravity="center"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="취향에 맞는 색상을 골라서"
                        android:fontFamily="@font/inter_medium_font"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:layout_marginTop="65dp"
                        android:textColor="#7E7E7E"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="앱에 적용해 보세요!"
                        android:fontFamily="@font/inter_medium_font"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:layout_marginTop="88dp"
                        android:textColor="#7E7E7E"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/setting_color_bubble"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="10dp"/>

                </FrameLayout>

                <!--테마 버튼-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="650dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_theme_color_0"
                            android:layout_marginBottom="16dp"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginBottom="16dp"
                            android:src="@drawable/ic_theme_color_2" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginBottom="16dp"
                            android:src="@drawable/ic_theme_color_4" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginBottom="16dp"
                            android:src="@drawable/ic_theme_color_6" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginBottom="16dp"
                            android:src="@drawable/ic_theme_color_1" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginBottom="16dp"
                            android:src="@drawable/ic_theme_color_3" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginBottom="16dp"
                            android:src="@drawable/ic_theme_color_5" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginBottom="16dp"
                            android:src="@drawable/ic_theme_color_7" />

                    </LinearLayout>

                </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_color_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#76C8EC"
                        android:text="변경하기"
                        android:textColor="#ffffff"
                        android:textSize="24dp"
                        android:elevation="10dp"
                        android:fontFamily="@font/inter_semi_bold"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginVertical="10dp"/>
            </LinearLayout>
        </ScrollView>
</LinearLayout>