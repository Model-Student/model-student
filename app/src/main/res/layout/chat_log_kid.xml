<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="right">

        <TextView
            android:id="@+id/tv_cl_kid_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PM 2:10"
            android:fontFamily="@font/inter_extra_light"
            android:textColor="#000000"
            android:textSize="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="15dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="5dp">
            <ImageView
                android:id="@+id/iv_cl_kid_text_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/chat_log_kid_text_back"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/tv_cl_kid_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="어서와 반가워 동민아 오랜"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="15dp"
                android:autoSizeMinTextSize="12dp"
                android:autoSizeStepGranularity="1dp"
                android:maxLines="2"
                android:fontFamily="@font/inter_bold"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="6"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/chat_log_kid_profile"
            android:scaleType="centerCrop"
            />
    </LinearLayout>

</LinearLayout>