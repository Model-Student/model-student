<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".chat_log.ChatLogActivity">
    <!--    상단바-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.9"
        android:background="#ffffff"
        android:elevation="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jalnan_font"
            android:gravity="center"
            android:text="Model Student"
            android:textColor="@color/Theme_Indigo"
            android:textSize="21dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    메인화면-->
    <ListView
        android:id="@+id/lv_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:background="#A6E3F0FD">

    </ListView>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDADA" /><!--    하단바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.9"
        android:background="#ffffff"
        android:orientation="horizontal">
        <!--        도움말 아이콘-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:backgroundTintMode="src_over"
            android:gravity="center"
            android:padding="16dp"
            android:src="@drawable/ic_help_not_fill" />
        <!--        홈 아이콘-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/Theme_Indigo"
            android:gravity="center"
            android:padding="16dp"
            android:src="@drawable/ic_home_not_fill" />
        <!--        설정 아이콘-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/Theme_Indigo"
            android:gravity="center"
            android:padding="16dp"
            android:src="@drawable/ic_settings_not_fill" />

    </LinearLayout>
</LinearLayout>