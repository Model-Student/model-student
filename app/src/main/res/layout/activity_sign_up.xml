<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".intro_activitys.SignUpActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.75"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_extrabold_font"
            android:text="SIGN UP"
            android:textColor="@color/Theme_Indigo_Text"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />


        <!--        <ImageView-->
        <!--            android:id="@+id/iv_sign_up_banana"-->
        <!--            android:layout_width="200px"-->
        <!--            android:layout_height="200px"-->
        <!--            android:src="@drawable/sign_up_banana1_iv"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintHorizontal_bias="0.9"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            app:layout_constraintVertical_bias="0.5" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.35"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4" />
        <!--STEP 1 시작-->
        <LinearLayout
            android:id="@+id/LL_sign_up_step1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="visible">
                <!--STEP 1-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:fontFamily="@font/inter_extrabold_font"
                        android:gravity="center_vertical"
                        android:text="STEP 1."
                        android:textColor="@color/black"
                        android:textSize="25dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/iv_sign_up_first_banana"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.35"
                        android:src="@drawable/sign_up_banana1_iv" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium_font"
                    android:text="사용자의 이름을 \n입력해주세요."
                    android:textColor="@color/black"
                    android:textSize="23dp" />

                <EditText
                    android:id="@+id/et_sign_up_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@drawable/border_edit_bottom"
                    android:ems="4"
                    android:hint="Name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8E8E" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.23" />
            </LinearLayout>
            <!--STEP 2 시작-->
            <LinearLayout
                android:id="@+id/LL_sign_up_step2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="invisible">
                <!--STEP 2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:fontFamily="@font/inter_extrabold_font"
                        android:gravity="center_vertical"
                        android:text="STEP 2."
                        android:textColor="@color/black"
                        android:textSize="25dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/iv_sign_up_second_banana"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.35"
                        android:src="@drawable/sign_up_banana2_iv" />
                </LinearLayout>
                <!--NUGU 고유 넘버가 될 수도-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium_font"
                    android:text="자녀와의 관계를 \n선택해주세요."
                    android:textColor="@color/black"
                    android:textSize="23dp" />

                <RadioGroup
                    android:id="@+id/rag_mother_or_father"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rabtn_father"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="부"
                        android:textColor="@color/black"
                        android:layout_marginEnd="10dp"
                        android:textSize="20dp"
                        android:fontFamily="@font/inter_medium_font"/>

                    <RadioButton
                        android:id="@+id/rabtn_mother"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="모"
                        android:textColor="@color/black"
                        android:layout_marginEnd="10dp"
                        android:textSize="20dp"
                        android:fontFamily="@font/inter_medium_font"/>
                </RadioGroup>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.23" />
            </LinearLayout>
            <!--STEP 3-1(자녀) 시작-->
            <LinearLayout
                android:id="@+id/LL_sign_up_step3_child"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="invisible">
                <!--STEP 3-1(자녀)-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:fontFamily="@font/inter_extrabold_font"
                        android:gravity="center_vertical"
                        android:text="STEP 3."
                        android:textColor="@color/black"
                        android:textSize="25dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/iv_sign_up_third_banana_child"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.35"
                        android:src="@drawable/sign_up_banana3_iv" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium_font"
                    android:text="보호자의 전화번호를 \n입력해주세요."
                    android:textColor="@color/black"
                    android:textSize="23dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@drawable/border_edit_bottom"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/et_sign_up_number_text_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="010"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="#8F8E8E" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:background="#777777" />

                    <EditText
                        android:id="@+id/et_sign_up_number_text_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="1234"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="#8F8E8E" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:background="#777777" />

                    <EditText
                        android:id="@+id/et_sign_up_number_text_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="5678"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="#8F8E8E" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.23" />
            </LinearLayout>
            <!--STEP 3-2(부모) 시작-->
            <LinearLayout
                android:id="@+id/LL_sign_up_step3_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">
                <!--STEP 3-2(부모)-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:fontFamily="@font/inter_extrabold_font"
                        android:gravity="center_vertical"
                        android:text="STEP 3."
                        android:textColor="@color/black"
                        android:textSize="25dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/iv_sign_up_third_banana_parent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.35"
                        android:src="@drawable/sign_up_banana3_iv" />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium_font"
                    android:text="자녀의 이름을 \n입력해주세요."
                    android:textColor="@color/black"
                    android:textSize="23dp" />

                <EditText
                    android:id="@+id/et_sign_up_child_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.21"
                    android:background="@drawable/border_edit_bottom"
                    android:hint="Name"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8E8E" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.23" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.6"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="4.4" />
            <!--android:drawableRight="@drawable/sign_up_button_right_img"-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_sign_up_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/Theme_Indigo"
                android:fontFamily="@font/inter_medium_font"
                android:text="로그인"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="4.4" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.4" />
    </LinearLayout>
</LinearLayout>