<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"
    android:background="#DDEAEF"
    android:orientation="vertical"
    android:paddingTop="2dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/splash_background_img"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.65"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/help_background_shape"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/iv_help_banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:src="@drawable/banner_chat_log"
                        android:paddingTop="12dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingRight="12dp"
                        >
                        <TextView
                            android:id="@+id/tv_help_title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:text="아이의 하루"
                            android:fontFamily="@font/inter_bold"
                            android:textColor="#2E447E"
                            android:textSize="30dp"
                            android:gravity="center|bottom"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="#99225375"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"/>
                        <TextView
                            android:id="@+id/tv_help_description"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="우리 아이의 속마음이 궁금하다면\n이 기능을 활용해 보세요!\n\n아이와 대화할 시간이 부족한\n보호자를 위해 마련했습니다."
                            android:fontFamily="@font/inter_medium_font"
                            android:textColor="#99383838"
                            android:paddingTop="10dp"
                            android:paddingLeft="5dp"
                            android:textSize="12dp"/>

                        <TextView
                            android:id="@+id/btn_help_start_detail"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/help_btn_shape"
                            android:layout_gravity="right"
                            android:text="i"
                            android:layout_margin="3dp"
                            android:gravity="center"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:elevation="3dp"/>
                    </LinearLayout>

                </LinearLayout>
                <github.com.st235.lib_expandablebottombar.ExpandableBottomBar
                    android:id="@+id/expandable_bottom_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    app:exb_backgroundCornerRadius="35dp"
                    app:exb_backgroundColor="#FFFFFF"
                    app:exb_itemInactiveColor="#121212"
                    app:exb_items="@menu/help_manu"
                    app:exb_elevation="0dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/help_back_image"
                android:scaleType="fitStart"
                android:paddingRight="23dp"
                android:paddingTop="30dp"/>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>
